@model IEnumerable<Application.DTOs.MapaDTO>

@{
	ViewData["Title"] = "Lista de Mapas";
}

<div class="container mt-4">
	<h2 class="mb-4 text-center">Mapas</h2>

	<a asp-controller="Home" asp-action="Index" class="btn btn-secondary mb-3">
		← Voltar ao Menu
	</a>

	<div class="row">
		@foreach (var mapa in Model)
		{
			<div class="col-md-4 mb-4">
				<div class="card h-100 shadow-sm">
					<img src="@mapa.ImagemUrl" class="card-img-top" alt="@mapa.Nome" style="height:200px; object-fit:cover;">
					<div class="card-body">
						<h5 class="card-title">@mapa.Nome</h5>
						<p class="card-text">@mapa.Descricao</p>
						<a asp-action="Detalhes" asp-route-id="@mapa.Id" class="btn btn-primary w-100">Ver Detalhes</a>
					</div>
				</div>
			</div>
			}
	</div>
</div>
